{
  "name": "@link-sharing-app/design-system",
  "version": "1.0.0",
  "private": true,
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist/**",
    "dist"
  ],
  "exports": {
    "./styles.css": "./dist/styles.css",
    "./theme.css": "./src/theme.css",
    "./svg-type": "./src/__types__/svg-type.ts"
  },
  "scripts": {
    "build": "tailwindcss -i ./src/styles.css -o ./dist/styles.css",
    "dev": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": "^19.1.0"
  },
  "packageManager": "pnpm@10.7.1",
  "devDependencies": {
    "@link-sharing-app/jest-presets": "workspace:*",
    "@link-sharing-app/eslint-config": "workspace:*",
    "@link-sharing-app/typescript-config": "workspace:*",
    "@types/react": "^19.1.2",
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "typescript": "^5.8.3",
    "@types/jest": "^29.5.14"
  },
  "dependencies": {
    "@link-sharing-app/utils": "workspace:*",
    "@tailwindcss/cli": "^4.1.8",
    "@tailwindcss/postcss": "^4.1.8",
    "postcss": "^8.5.4",
    "tailwindcss": "^4.1.8"
  },
  "jest": {
    "preset": "@link-sharing-app/jest-presets/node"
  }
}
