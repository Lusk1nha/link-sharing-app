<!-- auth-login-email.hbs -->

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Sign In to Your Account</title>
  </head>
  <body style='margin:0; padding:0; background-color:#f4f4f4;'>
    <table width='100%' cellpadding='0' cellspacing='0' border='0'>
      <tr>
        <td align='center'>
          <table
            width='600'
            cellpadding='0'
            cellspacing='0'
            border='0'
            style='background-color:#ffffff; margin:20px 0; border-radius:8px; overflow:hidden; font-family:Arial, sans-serif;'
          >
            <!-- Header -->
            <tr>
              <td
                style='background-color:#343A40; padding:20px; text-align:center;'
              >
                <h1 style='color:#ffffff; margin:0; font-size:24px;'>
                  Sign In to Your Account
                </h1>
              </td>
            </tr>

            <!-- Body -->
            <tr>
              <td
                style='padding:20px; color:#333333; font-size:16px; line-height:1.5;'
              >
                <p style='margin-top:0;'>Hello, {{user.email}}</p>
                <p>
                  We received a request to sign in to your account. Click the
                  button below to proceed:
                </p>
                <p style='text-align:center; margin:30px 0;'>
                  <a
                    href='https://example.com/login'
                    style='display:inline-block; padding:12px 24px; background-color:#007BFF; color:#ffffff; text-decoration:none; border-radius:4px; font-weight:bold;'
                  >
                    Sign In Now
                  </a>
                </p>
                <p>
                  If you didn’t request this, you can safely ignore this email.
                </p>
                <p>
                  Login made at
                  {{lastLogin}}
                </p>
              </td>
            </tr>

            <!-- Footer -->
            <tr>
              <td
                style='background-color:#f4f4f4; padding:15px; text-align:center; font-size:12px; color:#777777;'
              >
                <p style='margin:0;'>© 2025 Our Company Name. All rights
                  reserved.</p>
                <p style='margin:5px 0 0;'>
                  <a
                    href='https://example.com/help'
                    style='color:#007BFF; text-decoration:none;'
                  >
                    Help Center
                  </a>
                </p>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </body>
</html>