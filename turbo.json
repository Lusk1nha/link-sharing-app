{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": [
    "DATABASE_URL",
    "APP_PORT",
    "NODE_ENV",
    "JWT_SECRET",
    "JWT_REFRESH_SECRET",
    "JWT_REFRESH_EXPIRATION",
    "HMAC_SECRET",
    "EMAIL_FROM_ADDRESS",
    "EMAIL_HOST",
    "EMAIL_PORT",
    "EMAIL_USERNAME",
    "EMAIL_PASSWORD",
    "REDIS_HOST",
    "REDIS_PORT"
  ],

  "tasks": {
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "dependsOn": ["^build"],
      "outputs": [
        "build/**",
        ".vercel/**",
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "test": {
      "persistent": true,
      "cache": false,
      "dependsOn": ["^build"]
    },
    "test:watch": {
      "persistent": true,
      "cache": false,
      "dependsOn": ["^build"]
    },
    "test:cov": {
      "outputs": ["coverage/**"],
      "dependsOn": ["^build"]
    },
    "test:e2e": {
      "outputs": ["coverage/**"],
      "dependsOn": ["^build"]
    },
    "lint": {
      "dependsOn": ["^build", "^lint"]
    },
    "check-types": {
      "dependsOn": ["^build", "^check-types"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "format": {
      "cache": false,
      "persistent": true
    }
  }
}
